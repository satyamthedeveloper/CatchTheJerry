<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Easy">

    <ImageButton
        android:id="@+id/imageButton_right"
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="95dp"
        android:contentDescription="@string/jerry_house"
        android:onClick="selectedHouse3"
        app:layout_constraintStart_toEndOf="@+id/imageButton_center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jerryhouse" />

    <ImageButton
        android:id="@+id/imageButton_center"
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:layout_marginTop="95dp"
        android:contentDescription="@string/jerry_house"
        android:onClick="selectedHouse2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jerryhouse" />

    <ImageButton
        android:id="@+id/imageButton_left"
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="95dp"
        android:contentDescription="@string/jerry_house"
        android:onClick="selectedHouse1"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jerryhouse" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="237dp"
        android:layout_height="281dp"
        android:layout_marginTop="39dp"
        android:contentDescription="@string/tom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_right"
        app:srcCompat="@drawable/tom" />
</android.support.constraint.ConstraintLayout>